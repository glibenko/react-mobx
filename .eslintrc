{
    "extends": ["airbnb", "plugin:flowtype/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["client"]
            }
        }
    },
    "plugins": [
        "flowtype"
    ],
    "globals": {
        "_paq": true
    }
}